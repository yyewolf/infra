{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "docker": {
    "enabled": true
  },
  "kubernetes": {
    "managerFilePatterns": ["/.*\\.yaml$/"]
  },
  "packageRules": [
    {
      "matchManagers": ["docker"],
      "enabled": true,
      "groupName": "docker dependencies"
    }
  ]
}
