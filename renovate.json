{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/.*\\.yaml$/"
    ]
  },
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "enabled": true
    },
    {
      "matchManagers": [
        "docker"
      ],
      "enabled": true,
      "groupName": "docker dependencies"
    }
  ]
}
